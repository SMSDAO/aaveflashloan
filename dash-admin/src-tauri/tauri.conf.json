{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "AaveFlashLoan Dashboard",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": { "all": false, "open": true }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.aaveflashloan.dashboard",
      "icon": []
    },
    "security": { "csp": null },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "AaveFlashLoan Dashboard",
        "width": 1280,
        "height": 800
      }
    ]
  }
}

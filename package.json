{
  "name": "aaveflashloan",
  "version": "2.0.0",
  "description": "Cross-chain arbitrage bot using Aave V3 flash loans, Uniswap V3, SushiSwap and Curve",
  "main": "engine/index.js",
  "scripts": {
    "start": "node engine/index.js",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:ethereum": "CHAIN=ethereum npx hardhat run scripts/deploy.js --network ethereum",
    "deploy:polygon": "CHAIN=polygon npx hardhat run scripts/deploy.js --network polygon",
    "deploy:arbitrum": "CHAIN=arbitrum npx hardhat run scripts/deploy.js --network arbitrum",
    "deploy:bsc": "CHAIN=bsc npx hardhat run scripts/deploy.js --network bsc",
    "dashboard": "cd dash-admin && npm run dev"
  },
  "workspaces": [
    "dash-admin"
  ],
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "openzeppelin-solidity": "^2.5.1",
    "table": "^6.8.1"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.17",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.3.0",
    "chai": "^4.5.0",
    "hardhat": "^2.22.3",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.17",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  }
}
